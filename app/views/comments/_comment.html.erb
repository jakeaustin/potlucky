<p>
  <i><%= comment.user.email %> commented:</i><br>
  <%= comment.content %>
  <% if current_user == comment.user %>
    <% if  comment.commentable_type == 'Dish' %>
      <%= link_to 'X', dish_comment_path(@dish, comment), method: :delete, class: "btn btn-warning" %>
    <% else %>
      <%= link_to 'X', meal_comment_path(@meal, comment), method: :delete, class: "btn btn-warning" %>
    <% end %>
  <% end %>
</p>
